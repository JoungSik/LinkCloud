<%= simple_form_for @tag, html: { class: "col-md-6 col-sm-12 my-3" } do |f| %>

  <%= f.input :name, label: "이름" %>

  <%= f.input :color, as: :color, label: "색상" %>

  <div>
    <%= link_to "목록으로 돌아가기", tags_path, class: "btn btn-outline-secondary" %>
    <%= f.button :submit, "저장", class: "btn btn-outline-success" %>
  </div>
<% end %>
