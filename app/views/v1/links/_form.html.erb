<div class="col-md-6 col-sm-12 my-3">
  <%= form_with(model: link) do |f| %>
    <% if link.errors.any? %>
      <% link.errors.each do |error| %>
        <div class="alert alert-warning" role="alert"><%= error.message %></div>
      <% end %>
    <% end %>

    <div class="form-floating mb-3">
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :name, "이름" %>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_field :url, class: "form-control" %>
      <%= f.label :url, "주소" %>
    </div>

    <div class="form-floating mb-3">
      <%= f.text_area :description, class: "form-control" %>
      <%= f.label :description, "설명" %>
    </div>

    <div>
      <%= f.submit "저장", class: "btn btn-primary" %>
      <%= link_to "목록으로 돌아가기", links_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>